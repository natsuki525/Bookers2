<body>
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
				<% if @book.errors.any? %>
        			<div id="error_explanation">
          				<h2><%= pluralize(@book.errors.count, "error") %> prohibited this user from being saved:</h2>
          				<ul>
          					<% @book.errors.full_messages.each do |msg| %>
            					<li><%= msg %></li>
          					<% end %>
          				</ul>
        			</div>
    			<% end %>
				<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
					<div class="field row">
						<label for="book_title">Title</label><br>
						<%= f.text_field :title %>
					</div>
					<div class="field row">
						<label for="book_opinion">Opinion</label><br>
						<%= f.text_area :body %>
					</div>
					<div class="action row">
						<%= f.submit 'Update Book' %>
					</div>
				<% end %>
				<div class="button">
					<a class="show"><%= link_to 'Show', book_path(@book.id) %></a>
					<div class="partition">|</div>
					<a class="back" href="/books">Back</a>
				</div>
			</div>
		</div>
	</div>
</body>