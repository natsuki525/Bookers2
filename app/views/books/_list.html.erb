<div class="side-bar col-md-3">
	<% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@book.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
	<h2>User info</h2>
	<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
	<table class="table">
		<tbody>
			<tr></tr>
			<tr>
				<th>name</th>
				<th>
					<%= @user.name %>
				</th>
			</tr>
			<tr>
				<th>introduction</th>
				<th>
					<%= @user.introduction %>
				</th>
			</tr>
		</tbody>
	</table>
	<div class="row">
		<% if @user == current_user %>
			<p><%= link_to "", edit_user_path(@user), class: 'btn btn-default glyphicon glyphicon-wrench col-xs-12' %></p>
		<% else %>
			<p><%= link_to "", user_path(current_user), class: 'btn btn-default glyphicon glyphicon-wrench col-xs-12' %></p>
		<% end %>
	</div>
	<h2>New book</h2>
	<div class="new_book">
		<%= form_for(@book) do |f| %>
			<div class="field row">
				<label for="book_title">Title</label><br>
				<%= f.text_field :title, autofocus: true, class:"col-xs-12" %>
			</div>
			<div class="field row">
				<label for="book_opinion">Opinion</label><br>
				<%= f.text_area :body, class:"col-xs-12" %>
			</div>
			<div style="margin-top: 15px;">
				<%= f.submit "Create Book", class:"btn-primary col-xs-12" %>
			</div>
		<% end %>
	</div>
</div>