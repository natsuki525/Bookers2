<header>
	<div class="container">
		<nav>
			<span>Bookers</span>
		</nav>
		<nav>
			<ul>
				<li>
      				<%= link_to 'Home', user_path(current_user.id) %>
				</li>
				<li>
					<%= link_to 'Users', users_path %>
				</li>
				<li>
					<%= link_to 'Books', books_path %>
				</li>
				<li>
					<%= link_to 'logout', destroy_user_session_path, method: :delete %>
				</li>
			</ul>
		</nav>
	</div>
</header>

<div class="body">
	<div class="container">
		<div class="">
			<h2>Books</h2>
			<table>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
					</tr>
				<tbody>
					<tr>
						<% @books.each do |book| %>
						<td>
							<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-tumb" %>
						</td>
						<td>
							<%= link_to book_path(book.id) do %>
								<%= book.title %>
							<% end %>
						</td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
					<%= paginate @books, class: "pagenate" %>
				</tbody>
				</thead>
			</table>
		</div>
	</div>
</div>