<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<%= render 'books/list',books: @books %>
				<div class="col-xs-9">
					<h2>Users</h2>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th colspan="3"></th>
						</tr>
					</thead>
						<tbody>
							<tr>
								<% @users.each do |user| %>
								<td>
									<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", class: "img-circle pull-left profile-tumb" %>
								</td>
								<td>
									<%= user.name %>
								</td>
								<td>
									<%= link_to 'Show',user_path(user) %>
								</td>
							</tr>
							<% end %>
							<%= paginate @users, class: "pagenate" %>
						</tbody>
				</table>
				</div>
			</div>
		</div>
	</div>
</body>