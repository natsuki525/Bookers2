<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<%= render 'books/list',books: @books %>
			<div class="col-xs-9">
					<h2>Books</h2>
					<table class="table table-hover table-inverse">
						<thead>
							<tr>
								<th></th>
								<th>Title</th>
								<th>Opinion</th>
								<th colspan="3"></th>
							</tr>
						</thead>
						<tbody>
							<tr>
							<% @books.each do |book| %>
								<td>
									<%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
								</td>
								<td>
									<%= link_to book_path(book.id) do %>
										<%= book.title %>
									<% end %>
								</td>
								<td><%= book.body %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>