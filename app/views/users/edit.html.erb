<div class="body">
	<div class="container">
		<h2>User info</h2>
		<% if @user.errors.any? %>
        			<div id="error_explanation">
          				<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          				<ul>
          					<% @user.errors.full_messages.each do |msg| %>
            					<li><%= msg %></li>
          					<% end %>
          				</ul>
        			</div>
    			<% end %>
		<div class="edit_user">
		<%= form_for(@user) do |f| %>
			<div class="field">
				<label class="name">Name</label>
				<%= f.text_field :name, autofocus: true, class:"input", id:"inputEmail", placeholder:"name" %>
			</div>
			<div class="field">
				<label class="image">Image</label>
    			<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    		</div>
    		<div class="field">
    			<label class="introduction">Introduction</label>
    			<%= f.text_field :introduction, :size=>"30x60", autofocus: true, class:"introduction" %>
    		</div>
			<%= f.submit "Update User" %>
		<% end %>
		</div>
	</div>
</body>